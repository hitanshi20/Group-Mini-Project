tasks = []

while True:
    print("\n1. Add Task\n2. View Tasks\n3. Remove Task\n4. Exit")
    choice = int(input("Enter choice: "))

    if choice == 1:
        task = input("Enter new task: ")
        tasks.append(task)
    elif choice == 2:
        print("Your Tasks:", tasks)
    elif choice == 3:
        task = input("Enter task to remove: ")
        if task in tasks:
            tasks.remove(task)
    elif choice == 4:
        break
    else:
        print("Invalid choice!")
